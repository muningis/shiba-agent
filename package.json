{
  "name": "shiba-agent",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/packages/*",
    "src/tools/*"
  ],
  "scripts": {
    "build": "bun run --cwd src/packages/shared build && bun run --filter '@shiba-agent/*-cli' build",
    "clean": "bun run --filter '*' clean",
    "dev": "bun run --filter '*' dev"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
